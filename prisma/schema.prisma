generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ContactStatus {
  PROSPECT
  CLIENT
}

model Contact {
  id        String        @id @default(cuid())
  name      String
  email     String        @unique
  phone     String?
  company   String?
  notes     String?
  status    ContactStatus @default(PROSPECT)
  createdAt DateTime      @default(now())

  projects Project[]
}

enum ProjectStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELED
}

model Project {
  id          String        @id @default(cuid())
  title       String
  description String?
  amount      Float?
  dueDate     DateTime?
  status      ProjectStatus @default(PENDING)
  createdAt   DateTime      @default(now())

  contactId String
  contact   Contact @relation(fields: [contactId], references: [id])
}
